
@{
    ViewBag.Title = "SweatAlert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<script src=" https://unpkg.com/sweetalert/dist/sweetalert.min.js "></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<button class="btn btn-primary" id="btn1">buton 1</button>
<button class="btn btn-success" id="btn2">buton 2</button>

<script>
    $('#btn1').click(function () {  
        swal({
            title: "Silmek istiyormusunuz ?",
            text: "Veri Silinecektir Eminmisiniz ?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    swal("Veri kalıcı olarak silinmiştir.", "", "success")
                
                }
                else
                {
                    swal("Your imaginary file is safe!", "", "error");
                }
            });
    });
</script>
<script>
    $('#btn2').click(function ()
    {
        swal({
            title: "Silmek istiyormusunuz ?",
            text: "Veri Silinecektir Eminmisiniz ?",
            type: "İptal Et",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Evet",
            closeOnConfirm: false
        },
            function () {
                swal("Silindi!", "Veri kalıcı olarak silinmiştir.", "success");
            });
    });
</script>
